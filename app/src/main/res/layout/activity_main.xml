<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".component.main.MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F0F0F0"
        tools:ignore="MissingClass,MissingConstraints" />

    <com.angcyo.tablayout.DslTabLayout
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tab_convex_background="@color/white"
        app:tab_default_index="0"
        app:tab_draw_badge="true"
        app:tab_enable_selector_mode="false"
        app:tab_icon_view_id="@id/content"
        app:tab_indicator_height="3dp"
        app:tab_item_auto_equ_width="true"
        app:tab_select_color="@color/primary"
        app:tab_text_view_id="@id/content" />
</LinearLayout>