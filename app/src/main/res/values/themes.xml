<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="SuperUI.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">#FF33583B</item>
        <item name="colorPrimary">@color/primary</item>

        <item name="colorLightWhite">@color/white</item>
        <item name="colorDivider">@color/black183</item>
    </style>

    <!-- region 按钮 -->
    <!-- 按钮-->
    <style name="SuperButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d55</item>
    </style>

    <!-- 主色调按钮 -->
    <style name="SuperButton.Primary">
        <item name="android:background">@drawable/button_primary_background</item>
        <!-- 其他按钮属性 -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="elevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
    <!-- endregion -->

</resources>