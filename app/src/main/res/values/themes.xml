<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="SuperUI.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 关键：移除窗口标题栏 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- 避免主题默认状态栏颜色覆盖代码设置 -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- 可选 -->
        <item name="colorPrimary">@color/primary</item>

        <item name="colorLightWhite">@color/white</item>
        <item name="colorDivider">@color/black183</item>
    </style>

    <!-- region 按钮 -->
    <!-- 按钮-->
    <style name="SuperButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d55</item>
    </style>

    <!-- 主色调按钮 -->
    <style name="SuperButton.Primary">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- endregion -->

</resources>